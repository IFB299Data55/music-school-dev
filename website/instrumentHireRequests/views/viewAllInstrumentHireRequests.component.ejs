<p *ngIf="error" class="errorMessage">{{error}}</p>

<div *ngIf="PageIsAvailable()">

  <div class="flexsearch">
		<div class="flexsearch--wrapper">
			<form class="flexsearch--form" action="#" method="post">
				<div class="flexsearch--input-wrapper">
          <!-- do not remove name attribute -->
				  <input name="search" type="text" id="myInput" [(ngModel)]="filterText" (keyup)="Filter()" placeholder="Search for names.." title="Type in a name">
				</div>
			</form>
		</div>
  </div>
   
        
    <table class="ui right aligned celled table" data-role="table" data-mode="columntoggle" class="ui-responsive ui-shadow" 
            id="myTable" data-filter="true" data-input="#filterTable-input"> 
      <thead>
        <th class="left aligned">Student Name</th>
        <th>Instrument Model</th>
        <th>Instrument Type</th>
        <th>Hire Date</th>
      </thead>
      <tbody>
        <tr *ngFor="let instrument of filteredInstrumentRequests" (click)="SelectInstrumentHireRequest(instrument.hireid)">
          <td class="left aligned">{{instrument.firstname}} {{instrument.lastname}}</td>
          <td>{{instrument.instrumentname}}</td>
          <td>{{instrument.instrumenttype}}</td>
          <td>{{instrument.hiredate}}</td>
        </tr>
      </tbody>
    </table>

</div>

<p *ngIf="!PageIsAvailable()">You do not have access to this page.</p>