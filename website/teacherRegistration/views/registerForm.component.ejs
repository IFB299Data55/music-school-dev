<p *ngIf="error">{{error}}</p>
<form [hidden]="submitted" (ngSubmit)="Register()" #registrationForm="ngForm" method="POST">
	<div>
		<label 	for="firstName">First Name: </label>
		<input 	type="text" id="firstName" name="firstName" #firstName="ngModel"
				[(ngModel)]="teacher.firstName" pattern="^[A-Za-z ]+$" required/>
		<p [hidden]="(firstName.valid || firstName.untouched) && isValid.firstName">Invalid input. Must only contain letters.</p>
	</div>
	<div>
		<label 	for="middleName">Middle Name: </label>
		<input 	type="text" id="middleName" name="middleName" #middleName="ngModel"
				[(ngModel)]="teacher.middleName" pattern="^[A-Za-z ]*$" />
		<p [hidden]="(middleName.valid || middleName.untouched) && isValid.middleName">Invalid input. Must only contain letters.</p>
	</div>
	<div>
		<label 	for="lastName">Last Name: </label>
		<input 	type="text" id="lastName" name="lastName" #lastName="ngModel"
				[(ngModel)]="teacher.lastName" pattern="^[A-Za-z ]+$" />
		<p [hidden]="(lastName.valid || lastName.untouched) && isValid.lastName">Invalid input. Must only contain letters.</p>
	</div>
	<div>
		<label 	for="birthday">Date of Birth: </label>
		<input 	type="text" id="birthday" name="birthday" #birthday="ngModel"
				[(ngModel)]="teacher.birthday" pattern="^(\d){2}/(\d){2}/(\d){4}$|^(\d){2}-(\d){2}-(\d){4}$" />
		<p [hidden]="(birthday.valid || birthday.untouched) && isValid.birthday">Invalid input. Must be a valid date in the format dd/mm/yyyy or dd-mm-yyyy.</p>
	</div>
	<div>
		<label 	for="address">Address: </label>
		<input 	type="text" id="address" name="address" #address="ngModel"
				[(ngModel)]="teacher.address" />
		<p [hidden]="(address.valid || address.untouched) && isValid.address">Invalid input. Must be a valid address.</p>
	</div>
	<div>
		<label 	for="phoneNumber">Phone Number: </label>
		<input 	id="phoneNumber" name="phoneNumber" #phoneNumber="ngModel"
				[(ngModel)]="teacher.phoneNumber" pattern="^\d{8}$|^04\d{8}$" />
		<p [hidden]="(phoneNumber.valid || phoneNumber.untouched) && isValid.phoneNumber">Invalid input. Must be a valid mobile or home number (without area codes).</p>
	</div>
	<div>
		<label 	for="email">Email: </label>
		<input 	type="email" id="email" name="email" #email="ngModel"
				[(ngModel)]="teacher.email" pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" />
		<p [hidden]="(email.valid || email.untouched) && isValid.email">Invalid input. Must be a valid email format.</p>
	</div>
	<div>
		<button [disabled]="!registrationForm.form.valid" type="Submit">Submit</button>
	</div>
</form>
<div [hidden]="!submitted">
	<p>Attempting to Register your new account...</p>
</div>