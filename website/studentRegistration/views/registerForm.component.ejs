<p *ngIf="error" class="errorMessage">{{error}}</p>
<form [hidden]="submitted" (ngSubmit)="Register()" #registrationForm="ngForm" method="POST">
	<fieldset class="container" id="teacherinfo">
    <legend><span>Personal Information</span></legend>
    <div class="row">
		<div class="col-sm-4">
			<label 	for="email">Email: </label>
			<input 	type="email" id="email" name="email" #email="ngModel"
					[(ngModel)]="student.email" pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" required/>
			<p class="errorMessage" [hidden]="(email.valid || email.untouched) && isValid.email">Invalid input. Must be a valid email format.</p>
		</div>
		<div class="col-sm-4">
			<label 	for="password">Password: </label>
			<input 	title="Must be at least 6 digits long." type="password" id="password" name="password" #password="ngModel"
					[(ngModel)]="student.password" pattern="^.{6,}" required/>
			<p class="errorMessage" [hidden]="(password.valid || password.untouched) && isValid.password">Invalid input. Must be at least 6 digits long.</p>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-4">
			<label 	for="firstName">First Name: </label>
			<input 	type="text" id="firstName" name="firstName" #firstName="ngModel"
					[(ngModel)]="student.firstName" pattern="^[A-Za-z ]+$" required/>
			<p class="errorMessage" [hidden]="(firstName.valid || firstName.untouched) && isValid.firstName">Invalid input. Must only contain letters.</p>
		</div>
		<div class="col-sm-4">
			<label 	for="middleName">Middle Name: </label>
			<input 	type="text" id="middleName" name="middleName" #middleName="ngModel"
					[(ngModel)]="student.middleName" pattern="^[A-Za-z ]*$" />
			<p class="errorMessage" [hidden]="(middleName.valid || middleName.untouched) && isValid.middleName">Invalid input. Must only contain letters.</p>
		</div>
	</div>
    <div class="row">
		<div class="col-sm-4">
			<label 	for="lastName">Last Name: </label>
			<input 	type="text" id="lastName" name="lastName" #lastName="ngModel"
					[(ngModel)]="student.lastName" pattern="^[A-Za-z ]+$" required/>
			<p class="errorMessage" [hidden]="(lastName.valid || lastName.untouched) && isValid.lastName">Invalid input. Must only contain letters.</p>
		</div>
		<div class="col-sm-4">
			<label 	for="birthday">Date of Birth: </label>
			<input 	type="text" id="birthday" name="birthday" #birthday="ngModel"
					[(ngModel)]="student.birthday" pattern="^(\d){2}/(\d){2}/(\d){4}$|^(\d){2}-(\d){2}-(\d){4}$" required/>
			<p class="errorMessage" [hidden]="(birthday.valid || birthday.untouched) && isValid.birthday">Invalid input. Must be a valid date in the format dd/mm/yyyy or dd-mm-yyyy.</p>
		</div>
	</div>
    <div class="row">
		<div class="col-sm-4">
			<label 	for="address">Address: </label>
			<input 	type="text" id="address" name="address" #address="ngModel"
					[(ngModel)]="student.address" required/>
			<p class="errorMessage" [hidden]="(address.valid || address.untouched) && isValid.address">Invalid input. Must be a valid address.</p>
		</div>
		<div class="col-sm-4">
			<label 	for="phoneNumber">Phone Number: </label>
			<input 	id="phoneNumber" name="phoneNumber" #phoneNumber="ngModel"
					[(ngModel)]="student.phoneNumber" pattern="^\d{8}$|^04\d{8}$" required/>
			<p class="errorMessage" [hidden]="(phoneNumber.valid || phoneNumber.untouched) && isValid.phoneNumber">Invalid input. Must be a valid mobile or home number (without area codes).</p>
		</div>
	</div>
	<div>
		<button [disabled]="!registrationForm.form.valid" type="Submit">Submit</button>
	</div>
	</fieldset>
</form>
<div [hidden]="!submitted">
	<p>Attempting to Register your new account...</p>
</div>