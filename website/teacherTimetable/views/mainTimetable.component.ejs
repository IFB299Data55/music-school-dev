<p *ngIf="error" class="errorMessage">{{error}}</p>
<div *ngIf="FormIsAvailable()">
	<li class="ui cards">
		<div class="card"
		*ngFor="let lesson of lessons"
		(click)="GotoLesson(lesson.id)">
			<div class="content">
				<div class="header">
					<b>{{lesson.first_name}} {{lesson.last_name}}</b>
				</div>
				<div class="meta">
					<p>{{lesson.instrument_type}}</p>
					<p>Grade {{lesson.student_grade}}</p>
					<p>{{lesson.lesson_day}}: {{ConvertToDisplayTime(lesson.start_time)}} - {{ConvertToDisplayTime(lesson.end_time)}}</p>
				</div>
			</div>
		</div>
	</li>
</div>